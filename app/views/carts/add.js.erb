$("#addToCart").on("ajax:success", function(e, data, status, xhr){
  $("#ajax-response").removeClass("alert alert-danger")
  $("#ajax-response").addClass("alert alert-success").text("Item added to the cart");
  cartCount();
}
).on("ajax:error", function(e, xhr, status, error){
  $("#ajax-response").removeClass("alert alert-success")
  $("#ajax-response").addClass("alert alert-danger").text("There was an error with your purchase");
});