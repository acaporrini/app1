<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>
    <%= @product.name %>
  </h1>

  <div class="col-xs-12 col-md-6">
    <p>Color: <%= @product.colour %></p>
    <p> <%= number_to_currency(@product.price, precision: 2, locale: :de) %></p>
    <strong>Description:</strong>
    <%= @product.description %>
  </div>

  <div class="col-xs12 col-md-6">
    <img src="<%= @product.image_url %>" alt="No image available">
  </div>

  <ul class="nav nav-pills">
    <li role="presentation"><%= link_to 'Edit', edit_product_path(@product) %></li>
    <li role="presentation"><%= link_to 'Back', products_path %></li>
  </ul>


</div>