<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="fancy">Products</h1>
  
  <% @products.each do |product| %>
    <section class="product">
      <div class="row">
        <div class="col-xs-12 col-md-5 col-md-offset-1">
          <h2><%= product.name %></h2>
          <p>Color: <%= product.colour %></p>
          <p> Price: <%= number_to_currency(product.price, precision: 2, locale: :de) %></p>
          <p>
            <%= truncate(product.description, length: 200, omission: " ", separator: " ") { link_to "more...", product } %>
          </p>
          <div class="btn-group btn-group-xs" role="group" aria-label="...">
            <%= link_to 'Show', product, class: "btn btn-default" %>
            <%= link_to 'Edit', edit_product_path(product),class: "btn btn-default" %>
            <!-- <a href="#" id="description" class="btn btn-default toggleDesc">Description</a> -->
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
          </div>
        </div>
        <div class="col-xs-12 col-md-5">
          <img src='<%= product.image_url %>' class="img-responsive img-product">
        </div>

      </div>
<!--       <div class="row description">
        <div class="col-xs-12">

        </div>
      </div> -->
    </section>
  <% end %>
