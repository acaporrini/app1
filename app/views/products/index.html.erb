<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Products</h1>
  <%= link_to 'New Product', new_product_path, class: "btn btn-default" %>
  <% @products.each do |product| %>
    <section class="product">
      <div class="row">
        <div class="col-xs-12 col-md-5 col-md-offset-1">
          <h2><%= product.name %></h2>
          <div class="btn-group btn-group-sm" role="group" aria-label="...">
            <%= link_to 'Show', product, class: "btn btn-default" %>
            <%= link_to 'Edit', edit_product_path(product),class: "btn btn-default" %>
            <a href="#" id="description" class="btn btn-default toggleDesc">Description</a>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
          </div>
        </div>
        <div class="col-xs-12 col-md-5">
          <img src='<%= product.image_url %>' class="img-responsive">
        </div>

      </div>
      <div class="row description">
        <div class="col-xs-12">
          <%= product.description %>
        </div>
      </div>
    </section>
  <% end %>
