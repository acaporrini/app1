<div class="container">
  <div class="row">
    <header>
      <h1>Contact Us</h1>
      <%= flash[:notice] %>
    </header>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <img src="/images/contact.jpg" class="img-responsive">
    </div>
    <div class="col-sm-12 col-md-6">
      <%= form_tag("/static_pages/thank_you") do %>
        <div class="form-group">
          <%= label_tag :name, "Name" %>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
        </div>    
        <div class="form-group">
          <%= label_tag :phone, "Phone Number" %>
          <%= text_field_tag :phone, nil, class: "form-control", placeholder: "Enter your phone number" %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email Address" %>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
          <%= label_tag :message, "Message" %>
          <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
        </div>    

        <%= submit_tag "Send" %>   
    <% end %>
    </div>
  </div>

</div>
